<header id="page-header">
  <h1><a href="/">
    {{#if req.params.fourohfour}}
      {{statusCode 404}}
      /{{req.params.fourohfour}} could not be found.
    {{else}}
      {{statusCode 500}}
      Error
    {{/if}}
  </a></h1>
</header>

<div id="content">
  <p align="center">Maybe you should <a href="/{{adminSegment}}/">log in</a> and try to fix it.</p>

  {{#is settings.env 'development'}}
    {{#if user}}
      <pre>{{errorDebug}}</pre>
    {{/if}}
  {{/is}}
</div>
