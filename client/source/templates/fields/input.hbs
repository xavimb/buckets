{{#is fieldType 'textarea'}}
  {{textarea slug value label=name help=instructions required=required size=settings.size}}
{{/is}}
{{#is fieldType 'checkbox'}}
  {{checkbox slug value label=name size=settings.size}}
{{/is}}
{{#is fieldType 'text'}}
  {{input slug value label=name type=fieldType help=instructions required=required size=settings.size}}
{{/is}}
{{#is fieldType 'number'}}
  {{input slug value label=name type=fieldType help=instructions required=required size=settings.size}}
{{/is}}
{{#is fieldType 'cloudinary_image'}}
  {{cloudinaryUpload slug value help=instructions label=name}}
{{/is}}
