#bkts-sidebar
  background-color #fafafa

#bkts-hdr
  color #555
  min-height 80px
  padding 10px 15px
  margin 0 -15px

  .pull-right a
    position relative
    z-index 20

  .btn-menu
    z-index 20
    position absolute
    top 28px
    right 15px

#logo
  position relative
  margin 0 auto
  transform-origin 60% 90%
  transform scale(.8)

  .bkts-icon
    display block
    position relative
    vertical-align middle

  a
    opacity .8
    user-select none

    &:hover
      opacity 1
      transition opacity 100ms ease-out
      text-decoration none

#logo img
  display block
  width 60px
  height auto
  margin 0 auto
  position relative
  right 1px

// based on http://codepen.io/designcouch/pen/lgnDJ
.btn-menu
  transform scale(.7)
  border none !important
  margin-top 0
  height 25px
  width 40px
  position relative
  cursor pointer
  background transparent !important

  &:focus, &:active:focus
    outline none

  &.active
    // override bootstrap's outline and shadow
    outline none !important
    box-shadow none !important
    span
      &:nth-of-type(1)
      &:nth-of-type(3)
        width 0%

      &:nth-of-type(2)
        transform rotate(45deg)
        background #0986bf

        &:before
          transform rotate(90deg)
          background #0986bf

  &:before
    content ''
    display block
    position absolute
    height 40px
    width 40px
    top -23px
    left -5px
    transition .25s ease-in-out

  span
    display block
    width 70%
    height 5px
    left 15%
    background #8b8b8b
    position absolute
    transition .25s ease-in-out

    &:nth-of-type(1)
      top 0px
      left auto
      right 15%

    &:nth-of-type(2)
      top 10px

      &:before
        content ''
        display block
        position absolute
        top 0
        left 0
        background #8b8b8b
        width 100%
        height 100%

    &:nth-of-type(3)
      top 20px

.nav-primary
  transform translateZ(0)

  > li > a
    padding-left 40px

  a:first-child
    padding-right 40px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  a:first-child .icon
    position absolute
    left 8px
    top 6px
    font-size 24px
    margin-right 4px
    vertical-align middle

  .icon
    color #888

  .bucket-add
    position absolute
    top 0
    right 0
    width 40px
    height 40px
    padding-left 13px
    background-color transparent

    .no-touch &
      opacity 0

    .icon
      top 2px
      position relative
      font-size 13px

  li:hover .bucket-add
    opacity 1

  li.divider
    border-bottom 1px solid rgba(#ddd, .4)
    margin-left 40px

  > li > a:hover, > li > a:active
    background-color #fff
    color #555

  li.active
    background-color rgba(#fff, .4)

    // .bucket-add:hover
    //   background-color rgba(#fff, .2) !important

    a
      background-color inherit
      color #444

    a:hover
      background-color inherit
      color #444

  li a
    color #666

    &:hover
      color #333

addColor($name, $color)
  .color-{$name},
  .nav-primary > .bucket.color-{$name} > a,
  .nav-primary > .bucket.color-{$name} > a:hover,
  // .nav-primary > .bucket.color-{$name}.active .icon,
  .nav-primary > .bucket.color-{$name} .icon
    color $color
  .nav-primary > .bucket.color-{$name}:not(.active) > a:hover:not(:active)
    color lighten($color, 10)
  .background-{$name},
  .swatches.colors > .{$name}
    color #fff
    background-color $color

addColor('teal', $teal)
addColor('green', $green)
addColor('blue', $blue)
addColor('red', $red)
addColor('orange', $orange)
addColor('yellow', $yellow)
addColor('purple', $purple)
addColor('gray', $gray)

.usernav .avatar
  transform-origin 0 50%
  @extend .nav-primary a:first-child .icon
  top 4px
  z-index 10


@media (min-width: 768px)
  #bkts-sidebar
    width 240px
    border-right 1px solid #ddd
    background-color #f9f9f9
    float left
    min-height 100%
    position fixed
    left 0
    top 0
    bottom 0
    overflow auto

  .loggedInView
    margin-left 240px

  #bkts-hdr
    min-height 110px
    padding 20px 15px
