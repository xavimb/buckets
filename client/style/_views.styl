// Login

.loginView, .firstUser
  text-align center

  h3
    margin-bottom 10px

  #logo
    margin 60px auto 0px

  #logo img
    width 100px

  #logo span
    display none

  .form-group
    margin-bottom 10px

// Buckets

.swatches
  overflow hidden

.swatches > div
  width 30px
  height 30px
  font-size 24px
  text-align center
  float left
  margin 0 10px 10px 0
  position relative
  cursor pointer

.swatches.icons
  div
    padding 2px
    opacity .5
  .selected
    opacity 1

.swatches.colors
  .selected:after
    display block
    content ''
    position absolute
    top 40%
    left 40%
    background-color #fff
    border-radius 100%
    width 20%
    height 20%

.icon-preview
  font-size 90px

// Routes

.bkts-wildcard, code
  font-weight 500

.bkts-wildcard
  color $active

.bkts-wildcard-optional
  @extend .bkts-wildcard
  opacity .7

.route
  @extend .ui-text
  position relative

  h2 a
    color #999

    &:hover
      text-decoration none

  .btn-icon
    opacity .5
    transition all 200ms ease-in-out

  &:hover .btn-icon
    opacity 1

  .arrow
    opacity .1

.sortable
  margin 0
  padding 0
  list-style-type none

  .handle
    cursor move

// Entries

.entry-publish
  padding 10px 15px
  margin 15px -15px 0
  border-top 1px solid #ddd

.entry
  padding 15px
  border-bottom 1px solid #eee
  background-color rgba(#eee, 0)
  transition none

  &.active
    z-index 5
    transition all 180ms ease-out
    background-color #f6f6f6
    margin -1px -1px 0
    border-radius 2px
    padding 16px 16px 15px

  h3
    font-size 18px
    margin-top 0
    margin-bottom 2px

.entry-detail
  margin 20px 0 20px
  opacity 1

