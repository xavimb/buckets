// Note: Most basic variables are in LESS at bootstrap.less

@import 'nib'

$primary = #edb91d

// Material Design 700
$red = #d01716
$green = #689f38
$blue = #0288d1
$orange = #f57c00
$yellow = #fbc02d
$teal = #009688
$purple = #7b1fa2
$gray = #9e9e9e

$active = #2878ad // from bootstrap.less

$sans = 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif

*
  box-sizing border-box

.ui-text
  cursor default

html
  min-height 100%

body
  background-color #fcfcfc

#bkts-content
  min-height 100%
  > div > .alert
    margin-top 80px

.avatar
  vertical-align middle
  width 30px
  height 30px
  background-size cover, cover
  border-radius 20px
  display inline-block
  transform scale(.85)

.form-group
  margin-bottom 20px

.form-control
  border-width 2px
  box-shadow none
  transition all 200ms cubic-bezier(.4,0,.2,1)

  &:hover
    color #222

  &:focus
    box-shadow none !important

.btn-icon
  .icon
    font-size 24px
    vertical-align middle
    line-height inherit

  &:hover
    text-decoration none

  &:active
    position relative
    top 1px

.btn-icon-small .icon
  font-size 20px

.btn-help
  cursor help

hr.tiny
  width 5%
  margin 8px auto
  border-bottom 1px solid #eee

.page-title
  font-weight 400
  margin 0 0 15px
  letter-spacing -1px
  padding 35px 30px 15px
  background-color #fafafa
  color #aaa
  font-size 30px
  border-bottom 1px solid rgba(#111, .1)

  .btn-link
    color rgba(#fff, .9)
    vertical-align middle
    padding 6px

    &:hover
      color #fff

@import '_typography'
@import '_nav'
@import '_footer'
@import '_views'
@import '_toastr'

.tab-pane
  padding-top 20px

h4[data-toggle]
  cursor pointer

  .caret
    transition 200ms ease-out

  &.collapsed .caret
    transform rotate(-90deg)

.tooltip
  font-weight 500
  font-family $sans
  color #222

.userFields textarea.form-control
  font-size 14px

  @media (min-width: 400px)
    &
      // padding-top 12px
      font-size 16px
      line-height 20px

th
  font-weight 500

.has-slug
  border-radius bottom 0
  position relative
  z-index 5

.input-slug
  font-family Menlo, 'Courier New', monospace
  margin-top -2px
  border-radius top 0, bottom 6px
  color rgba(darken($primary, 40), .4)
  position relative
  opacity .6
  transition all 150ms cubic-bezier(.4,0,.2,1)
  z-index 2

  &:hover
    opacity .9

  &:focus
    opacity 1
    color darken($primary, 20)
    z-index 10

input[type="text"].form-control, textarea.form-control
  -webkit-appearance none

.nav-primary a:active, a.btn:not(.btn-link):active
  box-shadow rgba(#000, .2) 0 1px 2px
  transition box-shadow .15s ease-in

.input-sm, .input-lg
  padding-left 10px
  padding-right 10px

.input-lg
  font-weight 400

.pageBreadcrumb
  margin 10px 0
  background-color #f1f1f1

.dropzone
  overflow hidden
  position relative
  border-radius 4px
  border 2px dashed lighten($gray, 30)
  margin 6px 0
  padding 15px
  text-align center
  font-size 12px
  transition all 200ms ease-out
  &.hover
    background-color lighten($gray, 35)
    border-color $active

  p
    color #999

.preview
  overflow hidden
  margin 0 -15px
  position relative

  img
    display block
    position relative
    margin 0 auto
    max-width 100%

  .close
    position absolute
    top -.3em
    left 15px
    z-index 20

.bootstrap-tagsinput
  padding 4px 6px
